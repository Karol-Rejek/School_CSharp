<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginListApp.Pages.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Login"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry/>
            <Label Text="Hasło"/>
            <Entry/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Text="Zaloguj" Clicked="Button_Clicked_Log" 
                        Grid.Column="0"/>
                <Button Text="Rejestracja" Clicked="Button_Clicked_Registration" 
                        Grid.Column="1"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>