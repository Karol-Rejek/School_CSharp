<Window x:Class="ContainersApp.StackPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContainersApp"
        mc:Ignorable="d"
        Title="StackPanelWindow" Height="200" Width="400">
    <StackPanel Orientation="Vertical">
        <Button Content="Pierwszy Pszycisk"/>
        <CheckBox Content="Pierwsza opcja"
                  Width="100"
                  Height="60"/>
        <CheckBox Content="Druga opcja"/>
        <Button Content="Drugi Pszycisk"/>

    </StackPanel>
</Window>
