<Window x:Class="TicTacToeWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToeWpfApp"
        xmlns:viewModels="clr-namespace:TicTacToeWpfApp.VievModels"
        xmlns:converters="clr-namespace:TicTacToeWpfApp.Converters"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600">
    <Window.DataContext>
        <viewModels:MainVievModel/>
    </Window.DataContext>
    <Window.Resources>
        <converters:MultiDimensionalCoverter x:Key="MultiDimensionalCoverter"/>
        <Style x:Key="GameButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="auto"/>
            <Setter Property="Height" Value="auto"/>
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Kółko i Krzyżyk" FontSize="22" HorizontalAlignment="Center"/>
            <WrapPanel>
                <TextBlock Text="Gracz:" FontSize="16"/>
                <Label Width="20"/>
                <ComboBox ItemsSource="{Binding PlayerList}"
                          SelectedItem="{Binding CurrentPlayer}"/>
            </WrapPanel>
        </StackPanel>
        <Grid Grid.Row="1" Name="myGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="{Binding Board[0][0]}" Command="{Binding SetPleyerCommand}" Style="{StaticResource GameButtonStyle}" Grid.Column="0" Grid.Row="0"/>
            <Button Content="{Binding Board[0][1]}" Command="{Binding SetPleyerCommand}" Style="{StaticResource GameButtonStyle}" Grid.Column="0" Grid.Row="1"/>
            <Button Content="{Binding Board[0][2]}" Command="{Binding SetPleyerCommand}" Style="{StaticResource GameButtonStyle}" Grid.Column="0" Grid.Row="2"/>
            <Button Content="{Binding Board[1][0]}" Command="{Binding SetPleyerCommand}" Style="{StaticResource GameButtonStyle}" Grid.Column="1" Grid.Row="0"/>
            <Button Content="{Binding Board[1][1]}" Command="{Binding SetPleyerCommand}" Style="{StaticResource GameButtonStyle}" Grid.Column="1" Grid.Row="1"/>
            <Button Content="{Binding Board[1][2]}" Command="{Binding SetPleyerCommand}" Style="{StaticResource GameButtonStyle}" Grid.Column="1" Grid.Row="2"/>
            <Button Content="{Binding Board[2][0]}" Command="{Binding SetPleyerCommand}" Style="{StaticResource GameButtonStyle}" Grid.Column="2" Grid.Row="0"/>
            <Button Content="{Binding Board[2][1]}" Command="{Binding SetPleyerCommand}" Style="{StaticResource GameButtonStyle}" Grid.Column="2" Grid.Row="1"/>
            <Button Content="{Binding Board[2][2]}" Command="{Binding SetPleyerCommand}" Style="{StaticResource GameButtonStyle}" Grid.Column="2" Grid.Row="2"/>

        </Grid>
    </Grid>
</Window>
